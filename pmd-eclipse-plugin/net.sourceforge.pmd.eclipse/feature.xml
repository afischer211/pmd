<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="net.sourceforge.pmd.eclipse"
      label="%feature.label"
      version="4.0.1.qualifier"
      provider-name="%feature.provider_name"
      image="pmd_logo_small.jpg">

   <description url="%description.url">
      PMD For Eclipse
   </description>

   <copyright>
      %copyright.text
